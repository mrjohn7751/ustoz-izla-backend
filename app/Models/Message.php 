<?php

namespace App\Models;

use Illuminate\Database\Eloquent\Model;
use Illuminate\Database\Eloquent\Relations\BelongsTo;

class Message extends Model
{
    protected $fillable = [
        'chat_id',
        'sender_id',
        'sender_type',
        'message_type',
        'content',
        'file_name',
        'file_size',
        'file_type',
        'is_read',
        'read_at',
    ];

    protected $casts = [
        'is_read' => 'boolean',
        'read_at' => 'datetime',
    ];

    protected $appends = ['file_url', 'formatted_size'];

    public function chat(): BelongsTo
    {
        return $this->belongsTo(Chat::class);
    }

    public function sender(): BelongsTo
    {
        return $this->belongsTo(User::class, 'sender_id');
    }

    // Get file URL
    public function getFileUrlAttribute()
    {
        if ($this->message_type !== 'text' && $this->content) {
            return url('storage/' . $this->content);
        }
        return null;
    }

    // Check if message is image
    public function isImage()
    {
        return $this->message_type === 'image';
    }

    // Check if message is file
    public function isFile()
    {
        return $this->message_type === 'file';
    }

    // Get formatted file size
    public function getFormattedSizeAttribute()
    {
        if (!$this->file_size) {
            return null;
        }

        $size = (int)$this->file_size;
        if ($size < 1024) {
            return $size . ' B';
        } elseif ($size < 1024 * 1024) {
            return round($size / 1024, 2) . ' KB';
        } else {
            return round($size / (1024 * 1024), 2) . ' MB';
        }
    }
}
